{
  "name": "stock-dashboard-web",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prepare:dev-data": "node -e \"const fs=require('fs'),p=require('path');const src=p.resolve('..','data');const dst=p.resolve('public','data');fs.mkdirSync('public',{recursive:true});fs.cpSync(src,dst,{recursive:true});console.log('Copied',src,'->',dst);\"",
    "dev": "npm run prepare:dev-data && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && node -e \"require('fs').cpSync('../data','out/data',{recursive:true})\"",
    "export:local": "next build && node -e \"require('fs').cpSync('../data','out/data',{recursive:true})\""
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "latest",
    "next-themes": "^0.4.6",
    "react": "latest",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "latest",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/react": "latest",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "latest"
  }
}
